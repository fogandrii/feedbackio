<div class="navbar-form navbar-right">
  <% if user_signed_in? %>
      <%= form_tag destroy_user_session_path, method: :delete do %>
          <%= submit_tag 'Log out', class: 'btn btn-primary' %>
      <% end %>
  <% else %>
      <% @user = User.new %>
      <%= simple_form_for(@user, url: session_path(@user)) do |f| %>
          <div class="form-group">
            <%= f.input_field :email, required: false, autofocus: true, class: 'form-control', placeholder: 'E-mail' %>
          </div>

          <div class="form-group">
            <%= f.input_field :password, required: false, class: 'form-control', placeholder: 'Password' %>
          </div>

          <%= f.button :submit, 'Sign in', class: 'btn btn-primary' %>
      <% end %>
  <% end %>
</div>